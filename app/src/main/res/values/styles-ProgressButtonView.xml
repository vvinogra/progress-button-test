<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Progress Bar  -->
    <style name="Widget.App.InnerButtonProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <!--  Primary Progress Button  -->
    <style name="Widget.App.ProgressButtonView.Primary" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ProgressButtonView.Primary</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView.Primary" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar.Primary</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!--  Your Custom Button Style  -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Cut</item>
        <item name="android:backgroundTint">#00B1E7</item>
    </style>

    <!--  Your Custom Progress Bar Style  -->
    <style name="Widget.App.InnerButtonProgressBar.Primary">
        <item name="android:indeterminateTint">#6200EE</item>
    </style>

    <!--  Primary Variant Progress Button  -->
    <style name="Widget.App.ProgressButtonView.PrimaryVariant" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ProgressButtonView.PrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView.PrimaryVariant" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar.PrimaryVariant</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="Widget.App.InnerButtonProgressBar.PrimaryVariant">
        <item name="android:indeterminateTint">#03DAC5</item>
    </style>

    <!--  Outlined Progress Button  -->
    <style name="Widget.App.ProgressButtonView.Outlined" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ProgressButtonView.Outlined</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView.Outlined" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar.Outlined</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button.OutlinedButton</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#1B5E20</item>
    </style>

    <style name="Widget.App.InnerButtonProgressBar.Outlined">
        <item name="android:indeterminateTint">#1B5E20</item>
    </style>

    <!--  Outlined Variant Progress Button  -->
    <style name="Widget.App.ProgressButtonView.OutlinedVariant" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ProgressButtonView.OutlinedVariant</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView.OutlinedVariant" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar.OutlinedVariant</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button.OutlinedVariantButton</item>
    </style>

    <style name="Widget.App.Button.OutlinedVariantButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#FF6F00</item>
    </style>

    <style name="Widget.App.InnerButtonProgressBar.OutlinedVariant">
        <item name="android:indeterminateTint">#FF6F00</item>
    </style>

    <!--  Default Theme Progress Button  -->
    <style name="Widget.App.ProgressButtonView.DefaultTheme" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ProgressButtonView.DefaultTheme</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView.DefaultTheme" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar.DefaultTheme</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button.DefaultTheme</item>
    </style>

    <style name="Widget.App.Button.DefaultTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#F44336</item>
    </style>

    <style name="Widget.App.InnerButtonProgressBar.DefaultTheme">
        <item name="android:indeterminateTint">#FFF</item>
    </style>

    <!--  Default Style Progress Button  -->
    <style name="Widget.App.ProgressButtonView.DefaultStyle" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ProgressButtonView.DefaultStyle</item>
    </style>

    <style name="ThemeOverlay.App.ProgressButtonView.DefaultStyle" parent="">
        <item name="progressButtonViewProgressBarStyle">@style/Widget.App.InnerButtonProgressBar.DefaultStyle</item>
        <item name="progressButtonViewButtonStyle">@style/Widget.App.Button.DefaultStyle</item>
    </style>

    <style name="Widget.App.Button.DefaultStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#FDD835</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Widget.App.InnerButtonProgressBar.DefaultStyle">
        <item name="android:indeterminateTint">#000</item>
    </style>
</resources>